<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UpdatePwdActivity">


    <RelativeLayout
        android:id="@+id/updatemsg_re1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/purple_200"
        android:paddingHorizontal="14dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/white"
            android:background="@mipmap/back"/>
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:text="更改密码"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/updatepwd_re1"
        android:layout_below="@id/updatemsg_re1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/updatepwd_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码:"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/oldpwd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入旧密码"
            android:layout_toRightOf="@id/updatepwd_t1"
            android:background="@color/white"
            />


    </RelativeLayout>
    <View
        android:id="@+id/updatepwd_vi1"
        android:layout_below="@id/updatepwd_re1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/updatepwd_re2"
        android:layout_below="@id/updatepwd_vi1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/updatepwd_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newpwd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入新密码"
            android:layout_toRightOf="@id/updatepwd_t2"
            android:background="@color/white"
            />
    </RelativeLayout>

    <View
        android:id="@+id/updatepwd_vi2"
        android:layout_below="@id/updatepwd_re2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/updatepwd_re3"
        android:layout_below="@id/updatepwd_vi2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/updatepwd_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确    认:"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/newpwd1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请再次输入新密码"
            android:layout_toRightOf="@id/updatepwd_t3"
            android:background="@color/white"
            />
    </RelativeLayout>
    <View
        android:id="@+id/updatepwd_vi3"
        android:layout_below="@id/updatepwd_re3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/black"/>

    <Button
        android:id="@+id/change"
        style="@style/button_style"
        android:layout_below="@+id/updatepwd_vi3"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:text="点击更改" />

</RelativeLayout>