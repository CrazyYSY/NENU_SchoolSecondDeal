<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateUserMsgActivity">


    <RelativeLayout
        android:id="@+id/updatemsg_re1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/purple_200"
        android:paddingHorizontal="14dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/white"
            android:background="@mipmap/back"/>
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/white"
            android:text="更改信息"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/update_img"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/updatemsg_re2"
            android:layout_below="@id/update_img"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/updatemsg_t1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号:"
                android:textSize="22dp"
                />
            <TextView
                android:layout_toRightOf="@id/updatemsg_t1"
                android:id="@+id/showUser"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user"
                android:textSize="22dp" />
        </RelativeLayout>
        <View
            android:id="@+id/updatemsg_view2"
            android:layout_width="wrap_content"
            android:layout_height="0.0001dp"
            android:layout_below="@+id/updatemsg_re2"
            android:background="#A8A7A7"
            android:layout_marginTop="1dp"/>
        <RelativeLayout
            android:id="@+id/updatemsg_re3"
            android:layout_below="@id/updatemsg_re2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/updatemsg_t2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="22dp"
                />
            <EditText
                android:id="@+id/name"
                android:layout_toRightOf="@id/updatemsg_t2"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@null"
                android:hint="请填写姓名"
                />

        </RelativeLayout>
        <View
            android:id="@+id/updatemsg_view3"
            android:layout_width="wrap_content"
            android:layout_height="0.0001dp"
            android:layout_below="@+id/updatemsg_re3"
            android:background="#A8A7A7"
            android:layout_marginTop="1dp"/>
        <RelativeLayout
            android:id="@+id/updatemsg_re4"
            android:layout_below="@id/updatemsg_re3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/updatemsg_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱:"
                android:layout_centerVertical="true"
                android:textSize="22dp"
                />
            <EditText
                android:layout_toRightOf="@id/updatemsg_t3"
                android:id="@+id/updatemsg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请填写邮箱"
                android:background="@null"
                />

        </RelativeLayout>
        <View
            android:id="@+id/updatemsg_view4"
            android:layout_width="wrap_content"
            android:layout_height="0.0001dp"
            android:layout_below="@+id/updatemsg_re4"
            android:background="#A8A7A7"
            android:layout_marginTop="1dp"/>
        <RelativeLayout
            android:id="@+id/updatemsg_re5"
            android:layout_below="@id/updatemsg_re4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/updatemsg_t4"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:textSize="22dp"
                />
            <EditText
                android:id="@+id/address"
                android:layout_toRightOf="@id/updatemsg_t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:hint="请填写地址"
                android:background="@null"
                />

        </RelativeLayout>
        <View
            android:id="@+id/updatemsg_view5"
            android:layout_width="wrap_content"
            android:layout_height="0.0001dp"
            android:layout_below="@+id/updatemsg_re5"
            android:background="#A8A7A7"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/save"
            style="@style/button_style"
            android:layout_below="@+id/updatemsg_re5"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="保存" />
    </LinearLayout>


</LinearLayout>