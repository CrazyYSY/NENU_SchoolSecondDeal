<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_200">

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="28dp"
            android:background="@drawable/back3">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_baseline_search_24"/>
            <TextView
                android:layout_marginLeft="43dp"
                android:layout_marginRight="55dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="请输入搜索内容"
                android:background="#FCFDFD"/>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/re3"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp">

    <TextView
        android:id="@+id/tv_learning_use"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="生活用品"
        android:textStyle="bold"
        android:textSize="15sp"
        android:drawablePadding="6dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/icon_expensive"
        />
    <TextView
        android:id="@+id/tv_electric_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="电子游戏"
        android:textStyle="bold"
        android:textSize="15sp"
        android:drawablePadding="6dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/icon_game" />
    <TextView
        android:id="@+id/tv_daily_use"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="数码外设"
        android:textSize="15sp"
        android:textStyle="bold"
        android:drawablePadding="6dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/icon_phone" />
    <TextView
        android:id="@+id/tv_sports_good"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="体育用品"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/icon_sports" />
    </LinearLayout>

    <View
        android:id="@+id/vi_1"
        android:layout_below="@id/re3"
        android:layout_width="match_parent"
        android:layout_height="0.0001dp"
        android:background="#BDBABA"/>
    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vi_1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp" />

</RelativeLayout>